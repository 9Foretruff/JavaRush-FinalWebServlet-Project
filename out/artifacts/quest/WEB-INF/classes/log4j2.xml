<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>

        <Console name="LogToConsole" target="SYSTEM_OUT">
            <PatternLayout disableAnsi="false" pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <File name="LogToFile" fileName="C:\Users\mi200\IdeaProjects\JavaRush-FinalWebServlet-Project\logs\app.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>

    </Appenders>

    <Loggers>
        <!-- avoid duplicated logs with additivity=false -->
<!--        <Logger name="com.adventurequest" level="debug" additivity="false">-->
<!--            <AppenderRef ref="LogToConsole"/>-->
<!--        </Logger>-->

        <Root level="info">
<!--            <AppenderRef ref="LogToConsole"/>-->
            <AppenderRef ref="LogToFile"/>
        </Root>

    </Loggers>
</Configuration>