<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>

        <Console name="LogToConsole" target="SYSTEM_OUT">
            <PatternLayout disableAnsi="false" pattern= "%highlight{[%-20.-40maxLen{%-5level %logger{1}.%method()}{}]}{trace=bright cyan} %msg%n"/>
        </Console>

        <File name="LoginLogs" fileName="C:\Users\mi200\IdeaProjects\JavaRush-FinalWebServlet-Project\logs\login.log">
            <PatternLayout disableAnsi="false" pattern= "%highlight{[%-20.-40maxLen{%-5level %logger{1}.%method()}{}]}{trace=bright cyan} %msg%n">
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>

        <File name="RegistrationLogs" fileName="C:\Users\mi200\IdeaProjects\JavaRush-FinalWebServlet-Project\logs\registration.log">
            <PatternLayout disableAnsi="false" pattern= "%highlight{[%-20.-40maxLen{%-5level %logger{1}.%method()}{}]}{trace=bright cyan} %msg%n">
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>

    </Appenders>

    <Loggers>

        <Logger name="com.adventurequest.controller.servlet.RegistrationServlet" level="debug">
            <AppenderRef ref="RegistrationLogs"/>
        </Logger>

        <Logger name="com.adventurequest.controller.servlet.LoginServlet" level="debug">
            <AppenderRef ref="LoginLogs"/>
        </Logger>

        <Root level="info">
            <AppenderRef ref="LogToConsole"/>
        </Root>

    </Loggers>
</Configuration>